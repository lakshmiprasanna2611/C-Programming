#include<stdio.h>
int main()
{
	int n,temp,rem,sum=0;
	printf("enter a number:\n");
	scanf("%d",&n);
	temp=n;
	while(n>0){
		rem=n%10;
		sum=sum*10+rem;
		n=n/10;
		}
		printf("reverse of given number is %d\n",sum);
	if(temp==sum){
		printf("it is a palindrome");
	}
		else{
		printf("it is not a palinddrome");
}
}
