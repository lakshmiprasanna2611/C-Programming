#include<stdio.h>
int main() 
{ 
printf("enter the number of rows:");
 int n,m=1; 
 scanf("%d",&n); 
 for(int i=1;i<=n;i++) 
{ 
 for(int j=1;j<=i;j++) 
 { 
 printf("*"); 
 } 
 printf("\n"); 
} 
for(int i=n-1;i>=1;i--) 
{ 
 for(int j=1;j<=i;j++) 
 { 
 printf("*"); 
 } 
 printf("\n"); 
} 
 return 0; 
}
